mixin education()
  .container.education-container 
    .title 
      h3 Education
      .keyline
    each school in schools
      .item
        .section-header.clearfix 
          h4.bold.pull-left #{school.institution}
          h5.italic.pull-right #{school.startDate} - #{school.endDate}
        .section-header.clearfix 
          h4.pull-left #{school.studyType}
          h4.pull-left #{school.area}
          h4.pull-right #{school.location}
        ul
        each course in school.courses
          li= course

