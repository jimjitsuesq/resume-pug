mixin work()
  .container.work-container 
    .title 
      h3 Experience 
      .keyline 
    .item
      .section-header.clearfix 
        h3.bold.pull-left #{resume.work[0].company}
        h5.italic.pull-right #{resume.work[0].startDate} - #{resume.work[0].endDate}
      .section-header.clearfix 
        h4.pull-left #{resume.work[0].position}
        h4.pull-right #{resume.work[0].location}
      p.summary  #{resume.work[0].summary}
    .item
    .section-header.clearfix 
      h3.bold.pull-left #{resume.work[1].company}
      h5.italic.pull-right #{resume.work[1].startDate} - #{resume.work[1].endDate}
    .section-header.clearfix 
     h4.pull-left #{resume.work[1].position}
      h4.pull-right #{resume.work[1].location}
    p.summary  #{resume.work[1].summary}
    ul
      each highlight in resume.work[1].highlights
        li= highlight
    .item
